/*=================================================================
 horizontal lists
==================================================================*/

  .list, 
  .menu,
  .tabs     { display:inline-block; margin:0; padding:0; position:relative;  }

  .list li, 
  .menu li,
  .menu .item,
  .tabs li, 
  .tabs .item{ font-size:1em; display:inline-block; list-style:none;  }

  .tabs li, 
  .tabs .item,
  .menu li,
  .menu .item {
   border:0.1em solid #ccc; margin:0; margin-left:-1px;
   cursor:pointer;
  } 

  .tabs li, 
  .tabs .item {
    border-radius:.5em .5em 0 0; 
  } 

  /* complex tabs using input */

  .tabs li > input[type=radio] {
    display:none;
  }

  .tabs li > label {
    padding:1em;
    cursor:pointer;
    display:block;
    border-top: 2px solid transparent; /* same border top or btm size as checked */
  }

  [type=radio]:checked ~ label{ /* only works if input is before label */
    background: white;
    border-radius:.5em .5em 0 0; 
    border-top: 2px solid #3399FF; /* same border top or btm size as label */
  }

  label:hover{
    background-color:#3399FF;
    border-radius:.5em .5em 0 0; 
  }
  /* hacky */
  .content {
    display:none;
    position: absolute;
    width: 100%;
    background: white;
    padding: 20px;
    border: 1px solid #ccc;
    border-top:none; 
    left:-1px;
    overflow: hidden;    
  }

  [type=radio]:checked ~ label ~ .content {
    display: block;
  }

