$placeholder_as_tiles
  align-items stretch
  min-height min-content
  flex-grow 1
  flex-shrink 1
  flex-basis 0
    
.as-tiles {$cl_attr_block_left},
.as-tiles {$cl_attr_block_right},
.as-tiles {$cl_attr_block_ctr},
.as-tiles {$cl_block_vert},
.as-tiles {$cl_attr_block_pre},
.as-tiles {$cl_block},
{$cl_attr_block_pre_any}[class*='-tile']
  @extends $placeholder_as_tiles
  display flex
  
.as-tiles {$cl_block_item},
{$cl_attr_block_pre_any}[class*='-tile'][class*='-item']
  @extends $placeholder_as_tiles

    
