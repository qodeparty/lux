/* display block on non-mobile */
{$cl_block}
  display flex
  align-items center
  justify-content space-between
  flex-wrap wrap



//$block_main_placheholder
{$cl_attr_block_pre_any}
  display flex
  //align-items center
  flex-basis auto
  flex-shrink 0
  position relative
  // max-width 100%


[class*="block-"][class*="-flow"]
  flex-wrap wrap

+__block_pre($attr_item)
  align-items center
  flex-basis auto
  justify-content center
  flex 1 0


+__block_pre($attr_fixed)
  display block
  flex-wrap nowrap
  flex-basis 100%

/* ordernal */

+__block_pre($attr_first)
  flex-grow 0
  order -1

+__block_pre($attr_last)
  flex-grow 0
  order 9999



+__block_pre($attr_vert)
  flex-direction column

/* positional */

$placeholder_block_top
  align-items flex-start

$placeholder_block_mid
  align-items center

$placeholder_block_btm
  align-items flex-end

$placeholder_block_left
  justify-content flex-start

$placeholder_block_center
  justify-content center

$placeholder_block_right
  justify-content flex-end

__block_pre($attr_top,$placeholder_block_top)

__block_pre($attr_mid,$placeholder_block_mid)

__block_pre($attr_btm,$placeholder_block_btm)



__block_pre($attr_left,$placeholder_block_left)

__block_pre($attr_ctr,$placeholder_block_center)

__block_pre($attr_right,$placeholder_block_right)




{$cl_attr_block_pre_any}{$cl_attr_top} > {$cl_attr_item}
  @extends $placeholder_block_top

{$cl_attr_top}{$cl_attr_item}
  align-items flex-start !important


{$cl_attr_block_pre_any}{$cl_attr_mid} > {$cl_attr_item}
   @extends $placeholder_block_mid

{$cl_attr_mid}{$cl_attr_item}
  align-items center !important


{$cl_attr_block_pre_any}{$cl_attr_btm} > {$cl_attr_item}
  @extends $placeholder_block_btm

{$cl_attr_btm}{$cl_attr_item}
  align-items flex-end !important


{$cl_attr_block_pre_any}{$cl_attr_auto} > {$cl_attr_item}
  align-self stretch


+__block_pre($attr_auto)
  flex-grow 1
  flex-shrink 1
  max-width 100%
  align-self stretch


.block-breaker
  flex-basis 100% !important
  align-self stretch
  margin 0
  padding 0
  background transparent
  display block


.block-spacer
  display block !important
  background transparent
  flex 0 0 auto
  align-self center



.block .elem,
[class*="block-"] [class*='elem']
  //display block
  flex 1 1 auto
  flex-direction column



+__mobile()

  {$cl_attr_block_pre_any}[class*='-vresp']
    flex-direction column

  {$cl_attr_block_pre_any}[class*='-hresp']
    flex-direction row

  {$cl_attr_block_pre_any}[class*="-resp"]:not(.block-spacer):not(.block-inline)
    //display block
    flex-direction column
    align-items stretch

  // +__block_pre($attr_item)
  //   flex-grow 0

  {$cl_attr_block_pre_any}[class*="-resp"]  [class*='elem']
    flex-basis 100%

  // {$cl_attr_item} input // is this necessary
  //   max-width 100%

  +__block_pre($attr_auto)
    max-width 100%

