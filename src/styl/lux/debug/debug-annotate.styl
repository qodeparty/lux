#annotate 
  margin-top __rem(63)
  
  #inline div 
    color:#bbb
    
  #inline div *:first-child 
    color:#000

  .break 
    border:none; border-top:1px dotted var(--debug-color); margin 10px
  
  .grouping 
    border:1px dotted #75B8FB; background:#eee; padding:30px; margin:50px
    &.note 
        color:#FA6563; display:block; margin-bottom:5px; font-weight:bold
        
  .psuedo
    border:1px dashed #FFA64D; height:20px; position:relative
    &:before
      content: attr(title);
      top:20%;
      left:50%;
      position:absolute;
      color: #FFA64D;
      font-family:sans-serif;
      font-size:9px
  

  .ref   
    border:none; border:1px dashed #FFA64D; padding:1px 3px; 
    font-family:sans-serif; color:#FFA64D; font-size:10px; text-transform:uppercase; line-height:1.5pt 
    
  .notes,.note,.notes span.title
    font-family:sans-serif; color var(--debug-color); font-size:9px; padding 10px
  

  .notes span.title 
    text-transform:uppercase
    
  .code  
    display:none
    
  [data-tag] 
    border:1px dotted #75B8FB; margin:5px 0; padding:5px;
    &:after
          content: "";
          display: table;
          clear: both;
          
  .clearfix
    display:block
    &:after
      clear:both;content:".";display:block;font-size:0;height:0;line-height:0;visibility:hidden


    
  &.bg-grid
      background-image:
        linear-gradient(rgba(255,255,255,.1) 0px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,.1) 0px, transparent 1px),
        linear-gradient(rgba(255,255,255,.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,.1) 1px, transparent 1px);
      background-size:100px 100px, 100px 100px, 20px 20px, 20px 20px;
      background-position:-1px -1px, -1px -1px, -1px -1px, -1px -1px;
      
  .has-notes
    padding 1rem 0
    //margin-bottom 1rem
    
        
  .has-notes[title]:before
    content attr(title) 
    background-color:#EBF9FF
    font-size 0.7em
    padding 2px
    padding-left 5px
    color $lux_blue
    top -1px
    left 0
    position absolute
    min-width 100px
    text-align left
    z-index 100

  
/* //////////////////////////////////////////////////////////////////////////////
// Theme
///////////////////////////////////////////////////////////////////////////// */

.luxlogo
  background-image url(../img/lux.svg)
  background-repeat no-repeat
  background-size contain
  height 30px
  width 30px
  float left

.theme-unity .changes-shadow {$cl_layout_row} > div,
.theme-unity .changes-shadow {$cl_layout_col}
  __pseudo_border_var(1px)

.theme-unity .changes-shadow .thing
  background var(--debug-color)


.theme-unity .thing
  text-align center
  background rgba($lux_blue, .5)
  padding 1rem 0
  border-radius 3px
  color white
  position relative
  min-width 0.625rem
  __inner_border(1px,$sand_sadcloud)
  
.theme-unity .r,
.theme-unity .r .thing
  background rgba($sand_red, .5) !important
 
.theme-unity .o, 
.theme-unity .o .thing
  background rgba($sand_orange, .5) !important

.theme-unity .y,  
.theme-unity .y .thing
  background rgba($sand_yellow, .5) !important
  
.theme-unity .g,  
.theme-unity .g .thing
  background rgba($sand_green, .5) !important

.theme-unity .b,  
.theme-unity .b .thing
  background rgba($sand_electric, .5) !important

.theme-unity .v,  
.theme-unity .v .thing
  background rgba($sand_dusk, .5) !important


.theme-unity .s1 .thing
  background rgba($scale_0, .5)
  
.theme-unity .s2 .thing
  background rgba($scale_1, .5) 
  
.theme-unity .s3 .thing
  background rgba($scale_2, .5)

.theme-unity .s4 .thing
  background rgba($scale_3, .5)

.theme-unity .s5 .thing
  background rgba($scale_4, .5)

.theme-unity .s6 .thing
  background rgba($scale_5, .5)

.theme-unity .s7 .thing
  background rgba($scale_6, .5)

.theme-unity .s8 .thing
  background rgba($scale_7, .5)   


.theme-unity .thing.trunc 
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  
//inner border for flush example
.theme-unity .has-fake-border .thing
  __inner_border(1px,#fff)

.theme-unity .with-fake-border[class*="grid-"][class*="-flush"] > div
  box-shadow none
  
.theme-unity .with-fake-border[class*="grid-"][class*="-flush"] .thing
  __inner_border(1px,#fff)
  
.changes-background .thing
  background var(--display-color,$sand_sadcloud )


.theme-unity {$cl_layout_row} > div,
.with-fake-border > div
  __pseudo_border(1px,#fff)

