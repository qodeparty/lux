body.debug.theme-unity 
  color var(--debug-color)


.debug-display 
  position fixed
  bottom 0
  right 0
  z-index 999
  

.debug-links
  position fixed
  top 0
  left 0
  padding 1em
  width 100%
  border-bottom 1px solid white
  z-index 999
  a
    margin-top 3px
    margin-left 5px
    padding 5px
    font-size 10px
    display inline-block
    min-width 30px
    border 1px solid white
    color $lux_blue_2
    background #dbdbdb 
    
    
  section
    width 100%
    
  .curr
    background $lux_blue
    color white


.debug
  {$cl_attr_grid_any}:not({$cl_flex_grids}):hover:after,
  {$cl_attr_cell_any}:hover:after,
  {$cl_layout_col}:hover:after, 
  {$cl_block_pre_any}:hover:after
    content: attr( class );
    padding: 2px 8px;
    position: absolute;
    left: 0.5rem
    top 1rem
    white-space: nowrap;
    z-index: 20;
    background-color: $sand_darknight
    color: #fff;
    font-size: .8rem;


body.debug:after
  content $var_vers+'.r-'+$var_build+' ('+$basis+')'
  padding 2px 8px
  position sticky
  left 0.5rem
  bottom 0.5rem
  white-space nowrap
  z-index 20
  background-color $scale_7
  color #fff
  font-size .8rem
  z-index 9999

