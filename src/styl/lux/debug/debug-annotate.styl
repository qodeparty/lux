#annotate 
  margin-top __rem(63)
  
  #inline div 
    color:#bbb
    
  #inline div *:first-child 
    color:#000

  .break 
    border:none; border-top:1px dotted var(--debug-color); margin 10px
  
  .grouping 
    position relative
    border:1px dotted #75B8FB; background:#eee; padding:30px; margin:50px
    &.note 
        color:#FA6563; display:block; margin-bottom:5px; font-weight:bold
        
  .psuedo
    border:1px dashed #FFA64D; height:20px; position:relative
    &:before
      content: attr(title);
      top:20%;
      left:50%;
      position:absolute;
      color: #FFA64D;
      font-family:sans-serif;
      font-size:9px
  

  .ref   
    border:none; border:1px dashed #FFA64D; padding:1px 3px; 
    font-family:sans-serif; color:#FFA64D; font-size:10px; text-transform:uppercase; line-height:1.5pt 
    
  .notes,.note,.notes span.title
    font-family:sans-serif; color var(--debug-color); font-size:9px; padding 10px
  

  .notes span.title 
    text-transform:uppercase
    
  .code  
    display:none
    
  [data-tag] 
    border:1px dotted #75B8FB; margin:5px 0; padding:5px;
    &:after
          content: "";
          display: table;
          clear: both;
          
  .clearfix
    display:block
    &:after
      clear:both;content:".";display:block;font-size:0;height:0;line-height:0;visibility:hidden


    
  &.bg-grid
      background-image:
        linear-gradient(rgba(255,255,255,.1) 0px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,.1) 0px, transparent 1px),
        linear-gradient(rgba(255,255,255,.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,.1) 1px, transparent 1px);
      background-size:100px 100px, 100px 100px, 20px 20px, 20px 20px;
      background-position:-1px -1px, -1px -1px, -1px -1px, -1px -1px;
      
  .has-notes
    padding 1rem 0
    //margin-bottom 1rem
    
        
  .has-notes[title]:before
    content attr(title) 
    background-color:#EBF9FF
    font-size 0.7em
    padding 2px
    padding-left 5px
    color $lux_blue
    top -1px
    left 0
    position absolute
    min-width 100px
    text-align left
    z-index 100

  
/* //////////////////////////////////////////////////////////////////////////////
// Debug Tool
///////////////////////////////////////////////////////////////////////////// */

.luxlogo
  background-image url(../img/lux.svg)
  background-repeat no-repeat
  background-size contain
  height 30px
  width 30px
  float left


body.debug.theme-unity 
  color var(--debug-color)


.debug-display 
  position fixed
  bottom 0
  right 0
  z-index 999
  

.debug-links
  position fixed
  top 0
  left 0
  padding 1em
  width 100%
  border-bottom 1px solid white
  z-index 999
  a
    margin-top 3px
    margin-left 5px
    padding 5px
    font-size 10px
    display inline-block
    min-width 30px
    border 1px solid white
    color $lux_blue_2
    background #dbdbdb 
    
    
  section
    width 100%
    
  .curr
    background $lux_blue
    color white


.debug
  {$cl_attr_grid_any}:not({$cl_flex_grids}):not(.truegrid):hover:after,
  {$cl_attr_cell_any}:hover:after,
  {$cl_layout_col}:hover:after, 
  {$cl_block_pre_any}:hover:after
    content: attr( class );
    padding: 2px 8px;
    position: absolute;
    left: 0.5rem
    top 1rem
    white-space: nowrap;
    z-index: 20;
    background-color: $sand_darknight
    color: #fff;
    font-size: .8rem;


body.debug:after
  content $var_vers+'.r-'+$var_build+' ('+$basis+')'
  padding 2px 8px
  position sticky
  left 0.5rem
  bottom 0.5rem
  white-space nowrap
  z-index 20
  background-color $scale_7
  color #fff
  font-size .8rem
  z-index 9999

.xrayinfo:before
  position absolute
  text-transform uppercase
  vertical-align top
  background #000
  border-radius: 2px 2px 0 0
  bottom 100%
  color white
  content attr(title)
  display inline-block
  font-size 7px
  font-weight 700
  left 1px
  letter-spacing 1px
  margin-left -1px
  padding 3px 5px
  border-left 1px solid $sand_puff

.xrayinfo
  border-top-left-radius 0 !important
  margin-top 5px

