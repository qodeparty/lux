/* //////////////////////////////////////////////////////////////////////////////
// DEBUG BLOCK
////////////////////////////////////////////////////////////////////////////// */
debug_color_outline($this,$fg=$this,$inv=false)
  if $inv
    if $this == $fg
      $fg = $sand_puff
    background rgba($this, 1)
    border 1px dashed $this
    color $fg
  else
    background rgba($this, .3)
    border 1px dashed $this
    color $fg

$placeholder_debug_r
  debug_color_outline($sand_red)

$placeholder_debug_o
  debug_color_outline($sand_orange)

$placeholder_debug_y
