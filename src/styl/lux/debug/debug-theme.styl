$placeholder_material_design_ico
  font-family Material
  font-size 16px
  position absolute
  color inherit


.archxray .xray-blocks .block-spacer
  debug_color_outline($sand_green)
  padding 10px
  border-radius 2px
  position realtive

.archxray .xray-blocks .block-spacer:after
