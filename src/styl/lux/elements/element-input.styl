
.field
  display flex
  align-items stretch
  flex-direction column

.field.-horiz
  flex-direction row
  flex-wrap wrap

.field > label > span
  cursor pointer
  font-size 0.75rem
  font-weight bolder

.field > label > output
  font-size 0.75rem
  font-style italic



/* /////////////////////////////////////////////////////////////////////////// */
//needs responsive variants
.-tiny
  flex-basis 15%
  max-width 15%
  min-width 5rem

.-short
  flex-basis 25%
  //max-width 25%
  min-width 7.75rem

.-medium
  flex-basis 30%
  max-width 30%
  min-width 8.5rem

.-long
  flex-basis 40%
  max-width 40%
  min-width 10rem

.-half
  flex-basis 50%
  max-width 50%

.-fill
  flex-grow 1
  max-width initial
  min-width 5rem

.-break
  flex-basis 100%

.control-breaker
  flex-basis 100%


.-all
  flex-basis 100%
  max-width 100%

.-half input,
.-long input,
.-medium input,
.-short input,
.-tiny input
  width 100%

/* /////////////////////////////////////////////////////////////////////////// */


.control
  position relative
  font-size 1rem
  display flex
  align-items stretch
  flex-direction row
// .control > .field
//   color red

.control input
  position relative
  flex 1 1 0
  //max-width 100%
  //width 100%
  line-height 1.5
  display block
  user-select all
  padding .5em //not sure what these values are


.control .aside
.control button.aside
  vertical-align middle
  display block
  flex-grow 0

.control button.aside
  cursor pointer

.control .elem
  position relative
  display inline-flex
  flex 1 1 auto

.control .elem > *
  flex 1 1 auto

.control .elem > input
  flex-basis 100%


// .elem :first-child
//   border-radius 5px 0 0 5px

// .elem :last-child
//   border-radius 0 5px 5px 0

[class*='icon-']:before
  position absolute
  top 0
  color inherit
  font-size 2.25rem
  width 2.5rem
  height 2.5rem

/* /////////////////////////////////////////////////////////////////////////// */

.-unselectable
  user-select none

/* /////////////////////////////////////////////////////////////////////////// */

[class*='icon-'].-clickable:before
  cursor pointer

[class*='icon-'].-clickable:hover:before
  color rgba(78, 192, 228, 0.5)


/* /////////////////////////////////////////////////////////////////////////// */
.control .elem2 > input
  flex-basis auto

.elem2
  display flex
  align-items stretch

  .-zth
    flex-grow 0
    order -1

  .-nth
    flex-grow 0
    order 9999


$placeholder-elem2
  width 2.5rem
  height 2.5rem

.elem2.-ilr :nth-child(2)
.elem2.-ilt :nth-child(2)
  border 1px solid rgba(147,128,108,0.25)
  border-right none
  @extends $placeholder-elem2

.elem2.-irt :nth-child(2)
.elem2.-ilr :nth-child(3)
  border 1px solid rgba(147,128,108,0.25)
  border-left none
  @extends $placeholder-elem2

.elem2.-irt > input
  border-left 1px solid rgba(147,128,108,0.25)

.elem2.-ilt > input
  border-right 1px solid rgba(147,128,108,0.25)

.elem2 [class*='icon-']:before
  position relative

/* /////////////////////////////////////////////////////////////////////////// */

.elem[class*='-ilr'] > input
  padding-right 2.75rem
  padding-left 2.75rem

.-ilr :nth-child(2):before
  left 5px
  z-index 3

.-ilr :nth-child(3):before
  right 5px
  z-index 3

/* /////////////////////////////////////////////////////////////////////////// */

.elem[class*='-irt'] > input
  padding-right 2.75rem

.-irt :nth-child(2):before
  right 5px
  z-index 3

.-irt :nth-child(3)
  display none

/* /////////////////////////////////////////////////////////////////////////// */

.elem[class*='-ilt'] > input
  padding-left 2.75rem

.-ilt :nth-child(2):before
  left 5px
  z-index 3

.-ilt :nth-child(3)
  display none
/* /////////////////////////////////////////////////////////////////////////// */

.control input:focus ~ span
  color #a79f9d


/* /////////////////////////////////////////////////////////////////////////// */
//focus remove icons

.-short .-irt input:focus
.-tiny .-irt input:focus
  padding-right 0

.-short .-ilt input:focus
.-tiny .-ilt input:focus
  padding-left 1rem

.-short input:focus ~ span
.-tiny input:focus ~ span
  display none

/* /////////////////////////////////////////////////////////////////////////// */

._pass
  --status-color $sand_green
  --status-icon '\f12c' //mdi

._err
  --status-color $sand_red
  --status-icon '\f156' //mdi

._warn
  --status-color $sand_orange
  --status-icon '\f537' //mdi

.-statusable
  color var(--status-color,initial) !important

.icon-status:before
  content var(--status-icon,'')



._err .-errorable
  color var(--status-color,initial) !important

._err [class*='icon-'].-errorable:before
  content var(--status-icon,'')

