__join()
  join('',arguments)
  

__in($c,$ref)
  fx_char_in($c,$ref)

__fontsize($$s,$$l,$ref="")
  p(__in('desktop',$ref))
  $ref = fx_str_len($ref) > 1 ? __join('-',$ref) : ""
  for $size in $$s
    $i = index($$s,$size)
    $lbl = $$l[$i]
    &{$pre_size}{$lbl}{$ref}
      font-size: $$s[$i]
      
__em($val)
  $val = $val / $basis
  unquote(__join($val,'em'))

__rem($val)
  $val = $val / $basis
  unquote(__join($val,'rem'))

